{
  "name": "siakad-cms",
  "version": "0.1.0",
  "private": true,
  "author": "teamdevmatana",
  "engines": {
    "node": ">=22.16.x"
  },
  "packageManager": "pnpm@10.7.1",
  "pnpm": {
    "neverBuiltDependencies": []
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "turbo": "pnpm dlx turbo@2.5.0",
    "build:turbo": "pnpm turbo run build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && pnpm format",
    "type-check": "tsc --noEmit",
    "check:turbo": "pnpm turbo lint type-check",
    "test:e2e": "playwright test",
    "format": "prettier --write src",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "release": "cross-env HUSKY=0 commit-and-tag-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky"
  },
  "dependencies": {
    "@chakra-ui/menu": "^2.2.1",
    "@chakra-ui/react": "^3.22.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.1.1",
    "axios": "^1.10.0",
    "commit-and-tag-version": "^12.5.1",
    "framer-motion": "^12.23.0",
    "knip": "^5.61.3",
    "lucide-react": "^0.525.0",
    "next": "^15.3.5",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "react-icons": "^5.5.0",
    "zod": "^3.25.75",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.21.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/cz-commitlint": "19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.53.2",
    "@types/react": "^19.1.8",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "eslint-config-next": "^15.3.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "next-sitemap": "^4.2.3",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  }
}
